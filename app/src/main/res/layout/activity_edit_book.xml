<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screens.AddBookActivity"
    tools:ignore="ExtraText"
    tools:viewBindingIgnore="true">

    <com.example.firestoreandroidapp.utils.MSPTextBold
        android:id="@+id/MSPTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Edit Book"
        android:textColor="@color/black"
        android:textSize="@dimen/title_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.firestoreandroidapp.utils.MSPEditText
        android:id="@+id/et_book_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backwithborder"
        android:hint="Book name"
        android:inputType="text"
        android:padding="@dimen/et_padding"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MSPTextBold"
        tools:ignore="MissingConstraints"
        tools:text="Book name" />

    <com.example.firestoreandroidapp.utils.MSPEditText
        android:id="@+id/et_book_author_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backwithborder"
        android:hint="Book author"
        android:inputType="text"
        android:padding="@dimen/et_padding"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_book_name_edit"
        tools:ignore="MissingConstraints"
        tools:text="Book author" />

    <com.example.firestoreandroidapp.utils.MSPEditText
        android:id="@+id/et_launch_year_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backwithborder"
        android:hint="Launch year"
        android:inputType="date"
        android:padding="@dimen/et_padding"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_book_author_edit"
        tools:ignore="MissingConstraints"
        tools:text="Launch year" />


    <com.example.firestoreandroidapp.utils.MSPEditText
        android:id="@+id/et_price_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backwithborder"
        android:hint="Price"
        android:inputType="number"
        android:padding="@dimen/et_padding"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_launch_year_edit"
        tools:ignore="MissingConstraints"
        tools:text="Price" />

    <com.example.firestoreandroidapp.utils.MSPEditText
        android:id="@+id/et_save_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backwithborder"
        android:hint="Upload image"
        android:inputType="none"
        android:padding="@dimen/et_padding"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorSecondaryText"
        android:textSize="@dimen/et_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_price_edit"
        tools:ignore="MissingConstraints"
        tools:text="Upload image" />


    <Button
        android:id="@+id/btn_upload_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/ic_baseline_save"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_book"
        app:layout_constraintEnd_toEndOf="@+id/et_save_image"
        app:layout_constraintTop_toTopOf="@+id/et_price_edit"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.firestoreandroidapp.utils.MSPButton
        android:id="@+id/btn_edit_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorPrimary"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/btn_padding"
        android:paddingBottom="@dimen/btn_padding"
        android:text="EDIT BOOKS"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_save_image"
        tools:ignore="MissingConstraints" />

    <com.example.firestoreandroidapp.utils.MSPButton
        android:id="@+id/btn_delete_book"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorSnackBarError"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingTop="@dimen/btn_padding"
        android:paddingBottom="@dimen/btn_padding"
        android:text="DELETE BOOKS"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_book"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>